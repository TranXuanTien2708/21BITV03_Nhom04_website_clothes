@model _21BITV03_Nhom04_website_clothes.Models.UserViewModel

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Users</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-slash me-1"></i>
            Delete User
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this user?</h4>
            <dl class="row">
                <dt class="col-sm-2">User Name</dt>
                <dd class="col-sm-10">@Model.UserName</dd>
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>
                <dt class="col-sm-2">Phone</dt>
                <dd class="col-sm-10">@Model.Phone</dd>
                <dt class="col-sm-2">Full Name</dt>
                <dd class="col-sm-10">@Model.FullName</dd>
                <dt class="col-sm-2">Address</dt>
                <dd class="col-sm-10">@Model.Address</dd>
            </dl>

            <form asp-action="Delete" >
                <input type="hidden" asp-for="UserId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
