@model _21BITV03_Nhom04_website_clothes.Models.UserViewModel
@{
    ViewData["Title"] = "delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <dl class="row">
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
