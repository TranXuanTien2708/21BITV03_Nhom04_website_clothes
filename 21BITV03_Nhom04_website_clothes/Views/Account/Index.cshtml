@model _21BITV03_Nhom04_website_clothes.Models.LoginViewModel

@{
    ViewData["Title"] = "Tổng quan tài khoản";
    Layout = "~/Views/Shared/_Layout_LoginAndRegister.cshtml";
}

<div class="container-fluid page-header-login py-5">
    <h1 class="text-center text-white display-6">Trang người dùng</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Trang người dùng</a></li>
    </ol>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <!-- Sidebar Menu -->
            <div class="col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Quản lý tài khoản</h4>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="#" class="nav-link" data-target="personal-info">Thông tin cá nhân</a></li>
                            <li class="list-group-item"><a href="#" class="nav-link" data-target="orders">Đơn hàng</a></li>
                            <li class="list-group-item">
                                <form asp-controller="Account" asp-action="LogOut" method="post">
                                    <button type="submit" class="btn btn-danger w-100">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <div id="content">
                    <!-- Sections for personal info and orders -->
                    <div id="personal-info" class="section-content" style="display:none;">
                        <h2>Thông tin cá nhân</h2>
                        <p>Thông tin cá nhân của bạn sẽ được hiển thị ở đây.</p>
                    </div>
                    <div id="orders" class="section-content" style="display:none;">
                        <h2>Đơn hàng</h2>
                        <p>Danh sách đơn hàng của bạn sẽ được hiển thị ở đây.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include jQuery for simplicity -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.nav-link').click(function (e) {
            e.preventDefault();
            var targetId = $(this).data('target');

            // Hide all section contents
            $('.section-content').hide();

            // Show the selected section content
            $('#' + targetId).show();
        });

        // Optionally, show default section
        $('#personal-info').show(); // or whichever you want to show by default
    });
</script>
