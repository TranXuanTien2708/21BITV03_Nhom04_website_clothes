@model IEnumerable<_21BITV03_Nhom04_website_clothes.Data.AspNetRole>

@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý vai trò</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Vai trò</li>
    </ol>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo vai trò mới</a>
    </p>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-tag me-1"></i>
            Danh sách vai trò
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
                        <th>@Html.DisplayNameFor(model => model.ConcurrencyStamp)</th>
                        <th style="text-align: center;">Thao tác</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
                        <th>@Html.DisplayNameFor(model => model.ConcurrencyStamp)</th>
                        <th style="text-align: center;">Thao tác</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.NormalizedName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ConcurrencyStamp)</td>
                            <td style="text-align: center;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
