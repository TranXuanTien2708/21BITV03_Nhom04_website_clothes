@model _21BITV03_Nhom04_website_clothes.Data.AspNetRole

@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa vai trò</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Vai trò</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-tag me-1"></i>
            Xác nhận xóa vai trò
        </div>
        <div class="card-body">
            <h4>Bạn có chắc chắn muốn xóa vai trò này không?</h4>
            <dl class="row">
                <dt class="col-sm-2">Tên vai trò</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Tên vai trò chuẩn hóa</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NormalizedName)</dd>

                <dt class="col-sm-2">Concurrency Stamp</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ConcurrencyStamp)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>
