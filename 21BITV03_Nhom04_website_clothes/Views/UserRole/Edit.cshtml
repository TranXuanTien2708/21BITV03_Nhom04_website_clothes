@model UserRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Role for @Model.UserName</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Index">Users</a></li>
        <li class="breadcrumb-item active">Edit Role</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Edit Role
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="UserId" value="@Model.UserId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label">Roles</label>
                    <div>
                        @foreach (var role in Model.Roles)
                        {
                            <div class="form-check">
                                <input type="radio"
                                       name="SelectedRoleId"
                                       value="@role.RoleId"
                                       class="form-check-input"
                                       id="role_@role.RoleId"
                                @(role.RoleId == Model.SelectedRoleId ? "checked" : "") />
                                <label class="form-check-label" for="role_@role.RoleId">@role.RoleName</label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
