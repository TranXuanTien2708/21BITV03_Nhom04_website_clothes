@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout_LoginAndRegister.cshtml";
}
@model CartViewModel

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
        <form action="#">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-8">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Color</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CartProducts.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Your cart is empty.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model.CartProducts)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center mt-2">
                                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" />
                                                </div>
                                                <p class="mb-0 mt-4">@item.ProductName</p>
                                            </td>
                                            <td>
                                                <p class="mb-0 mt-4">@item.ColorName</p>
                                            </td>
                                            <td>
                                                <p class="mb-0 mt-4">@item.SizeName</p>
                                            </td>
                                            <td>
                                                <p class="mb-0 mt-4">@item.Quantity</p>
                                            </td>
                                            <td>
                                                <p class="mb-0 mt-4">@item.DiscountedPrice.ToString("N0") $</p>
                                            </td>
                                            <td>
                                                <p class="mb-0 mt-4">@((item.Quantity * item.DiscountedPrice).ToString("N0")) $</p>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check text-start my-3">
                                <input type="checkbox" class="form-check-input bg-primary border-0" id="Transfer-1" name="Transfer" value="Transfer">
                                <label class="form-check-label" for="Transfer-1">Direct Bank Transfer</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check text-start my-3">
                                <input type="checkbox" class="form-check-input bg-primary border-0" id="Payments-1" name="Payments" value="Payments">
                                <label class="form-check-label" for="Payments-1">Check Payments</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check text-start my-3">
                                <input type="checkbox" class="form-check-input bg-primary border-0" id="Delivery-1" name="Delivery" value="Delivery">
                                <label class="form-check-label" for="Delivery-1">Cash On Delivery</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check text-start my-3">
                                <input type="checkbox" class="form-check-input bg-primary border-0" id="Paypal-1" name="Paypal" value="Paypal">
                                <label class="form-check-label" for="Paypal-1">Paypal</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 justify-content-end">
                        <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                            <div class="bg-light rounded">
                                <div class="p-4">
                                    <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                                    <div class="d-flex justify-content-between mb-4">
                                        <h5 class="mb-0 me-4">Subtotal:</h5>
                                        <p class="mb-0" id="subtotal">@Model.CartProducts.Sum(p => p.Quantity * p.DiscountedPrice).ToString("N0") $</p>
                                    </div>
                                </div>
                                <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                                    <h5 class="mb-0 ps-4 me-4">Total</h5>
                                    <p class="mb-0 pe-4" id="cart-total">@Model.CartProducts.Sum(p => p.Quantity * p.DiscountedPrice).ToString("N0") $</p>
                                </div>
                                <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button" onclick="location.href='@Url.Action("Index", "Checkout")'">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
