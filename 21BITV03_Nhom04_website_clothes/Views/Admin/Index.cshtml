@model _21BITV03_Nhom04_website_clothes.Data.UserInfo

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thông tin cá nhân</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Trang Admin</li>
        <li class="breadcrumb-item">Thông tin cá nhân</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <i class="fas fa-user me-1"></i>
                Hồ sơ của bạn
            </span>
            <a href="@Url.Action("Edit", "Admin", new { id = Model.UserId })" class="btn btn-primary">
                <i class="fas fa-edit"></i> Sửa
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <h1 hidden>@Model.UserId</h1>
                    <h5>@(Model.FullName ?? "Chưa cập nhật")</h5>
                    <p>Email: @(Model.Email ?? "Chưa cập nhật")</p>
                    <p>Số điện thoại: @(Model.Phone.HasValue ? Model.Phone.Value : "Chưa cập nhật")</p>
                    <p>Địa chỉ: @(Model.Address ?? "Chưa cập nhật")</p>
                </div>
            </div>
        </div>
    </div>
</div>
