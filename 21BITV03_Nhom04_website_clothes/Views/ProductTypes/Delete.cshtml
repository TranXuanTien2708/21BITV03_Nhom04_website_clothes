@model _21BITV03_Nhom04_website_clothes.Data.ProductType

@{
    ViewData["Title"] = "Delete Product Type";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa loại sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Loại sản phẩm</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash-alt me-1"></i>
            Xác nhận xóa loại sản phẩm
        </div>
        <div class="card-body">
            <h3 class="text-danger">Bạn có chắc chắn muốn xóa loại sản phẩm này?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductTypeName)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductTypeName)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductTypeId" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Trở lại danh sách</a>
            </form>
        </div>
    </div>
</div>
