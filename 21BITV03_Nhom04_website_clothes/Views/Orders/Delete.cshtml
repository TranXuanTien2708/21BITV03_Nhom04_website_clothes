@model _21BITV03_Nhom04_website_clothes.Data.Order

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Order</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Orders" asp-action="Index">Orders</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash-alt me-1"></i>
            Delete Order
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this order?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Message)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => modelItem.Message)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => modelItem.PaymentMethod)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => modelItem.OrderStatus)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => modelItem.User.UserId)
                </dd>
            </dl>
            <form asp-action="Delete" >
                <input type="hidden" asp-for="OrderId" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
