@model _21BITV03_Nhom04_website_clothes.Data.ProductColor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Product Color</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="ProductColors" asp-action="Index">Product Colors</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash-alt me-1"></i>
            Delete Product Color
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="row mt-4">
                <dt class="col-sm-2">
                    Tên màu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ColorName)
                </dd>
                <dt class="col-sm-2">
                    Giới thiệu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="ColorId" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
